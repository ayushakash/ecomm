# Database
MONGODB_URI=mongodb://localhost:27017/construction-ecommerce

# JWT
JWT_SECRET=your_jwt_secret_key_here

# Server
PORT=5000
NODE_ENV=development

# n8n Configuration
N8N_ENABLED=true
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/order-events
N8N_TIMEOUT=5000
N8N_RETRY_ATTEMPTS=3
N8N_RETRY_DELAY=1000

# MSG91 Configuration
MSG91_AUTH_KEY=your_msg91_auth_key_here
MSG91_SENDER_ID=CNSMAT
MSG91_ROUTE=4
MSG91_COUNTRY=91

# SMS Configuration
MSG91_SMS_ENABLED=true
MSG91_SMS_OTP_TEMPLATE_ID=your_sms_otp_template_id
MSG91_SMS_ORDER_TEMPLATE_ID=your_sms_order_template_id
MSG91_SMS_UPDATE_TEMPLATE_ID=your_sms_update_template_id
MSG91_SMS_CART_TEMPLATE_ID=your_sms_cart_template_id
MSG91_SMS_WELCOME_TEMPLATE_ID=your_sms_welcome_template_id

# WhatsApp Configuration  
MSG91_WHATSAPP_ENABLED=true
MSG91_WA_OTP_TEMPLATE_ID=your_whatsapp_otp_template_id
MSG91_WA_ORDER_TEMPLATE_ID=your_whatsapp_order_template_id
MSG91_WA_UPDATE_TEMPLATE_ID=your_whatsapp_update_template_id
MSG91_WA_CART_TEMPLATE_ID=your_whatsapp_cart_template_id
MSG91_WA_WELCOME_TEMPLATE_ID=your_whatsapp_welcome_template_id

# OTP Configuration
MSG91_OTP_ENABLED=true
OTP_EXPIRY_MINUTES=5
OTP_MAX_ATTEMPTS=3
OTP_RETRY_DELAY=30
MSG91_OTP_LOGIN_TEMPLATE=your_login_otp_template
MSG91_OTP_REGISTER_TEMPLATE=your_register_otp_template
MSG91_OTP_RESET_TEMPLATE=your_reset_otp_template
MSG91_OTP_VERIFY_TEMPLATE=your_verify_otp_template

# Abandoned Cart Configuration
ABANDONED_CART_ENABLED=true
CART_TRACKING_DELAY=15